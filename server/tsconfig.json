{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "esModuleInterop": true,
    "strict": false,
    "noImplicitAny": false,
    "outDir": "dist",
    "skipLibCheck": true,
    "declaration": true,
    "resolveJsonModule": true,
    "allowJs": true,
    "types": ["bun", "node"]
  },
  "include": ["src/**/*", "*.ts"],
  "exclude": ["node_modules", "dist"]
}
